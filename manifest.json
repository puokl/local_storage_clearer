{
  "manifest_version": 3,
  "name": "LocalStorage Clearer",
  "version": "1.0",
  "description": "Clears local storage on cyclingnews website.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://www.cyclingnews.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
